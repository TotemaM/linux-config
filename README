# Install cmake
sudo apt install cmake

# Install latest neovim from source
git clone git@github.com:neovim/neovim.git
git checkout nightly
make
make install

# Download latest luarocks tar.gz file from website
sudo apt install lua5.1 liblua5.1-dev
tar -xf luarocks_dl.tar.gz
cd luarocks_dl
./configure
make
make install
